<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:background="#e0000000"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/select_xian1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_xian1" />

            <ImageButton
                android:id="@+id/select_xian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_xian2" />

            <ImageButton
                android:id="@+id/select_xian3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_xian3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/select_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_blue" />

            <ImageButton
                android:id="@+id/select_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_fen" />

            <ImageButton
                android:id="@+id/select_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_yellow" />

            <ImageButton
                android:id="@+id/select_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_green" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
